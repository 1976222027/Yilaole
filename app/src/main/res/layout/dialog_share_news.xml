<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_gravity="bottom"
                android:background="@drawable/dialog_comment_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_weichat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="38dp"
            android:drawablePadding="12dp"
            android:drawableTop="@mipmap/news_weichat"
            android:gravity="center_horizontal"
            android:text="微信"/>

        <TextView
            android:id="@+id/tv_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="38dp"
            android:drawablePadding="12dp"
            android:drawableTop="@mipmap/news_frends"
            android:gravity="center_horizontal"
            android:text="朋友圈"/>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/tv_share_cancel"
        android:background="@color/home_gray_bg"/>

    <TextView
        android:id="@+id/tv_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:paddingEnd="9dp"
        android:paddingStart="9dp"
        android:text="取消"
        android:textColor="#666666"
        android:textSize="16sp"/>

</RelativeLayout>
