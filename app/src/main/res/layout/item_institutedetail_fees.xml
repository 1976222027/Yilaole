<?xml version="1.0" encoding="utf-8"?>
<!-- 收住对象的item-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:background="@color/white"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_pic"
        android:layout_width="98dp"
        android:padding="20dp"
        android:layout_height="98dp"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/bedImg"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
           />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_feesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/layout_pic"
        android:text="标题"
        android:textColor="@color/home_text1"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_bedRemark"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_feesName"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/layout_pic"
        android:textColor="@color/home_text1"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:textColor="@color/colorPrice"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/home_gray_bg"/>

</RelativeLayout>