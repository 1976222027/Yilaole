<?xml version="1.0" encoding="utf-8"?>
<!-- 收住对象的item-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/chImg"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="15dp"
        android:layout_marginStart="15dp"
        />

    <TextView
        android:id="@+id/tv_chtitle"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/chImg"
        android:layout_alignEnd="@+id/chImg"
        android:layout_alignStart="@+id/chImg"
        android:background="#80000000"
        android:gravity="center_vertical|left"
        android:paddingStart="15dp"
        android:text="服务一流"
        android:textColor="@color/white"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/chImg"
        android:layout_alignStart="@+id/chImg"
        android:layout_below="@+id/chImg"
        android:textColor="@color/home_text1"
        android:textSize="13sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/home_gray_bg"/>

</RelativeLayout>